<div class="container-block col-md-12 col-sm-12 col-xs-12 no-padding">
  <div class="summary-block col-md-12 col-sm-12 col-xs-12 no-padding">
    <div class="container no-padding">
      <div class="row no-margin">

        <div class="content col-md-12 col-sm-12 col-xs-12 no-padding">
          <h3 class="title"><a>Login</a></h3>
          <div class="login_block col-md-12 col-sm-12 col-xs-12">

            <form id="login_form">

              <div class="ajax_message" style="display:none;"><p>Invalid Login Credentials</p></div>
              <div class="login_field col-ms-12 col-sm-12 col-xs-12">
                <label>USERNAME : <span>I forgot!!</span></label>
                <input type="text" id="user_name_login">
              </div><!--LOGIN_FIELD-->

              <div class="login_field col-ms-12 col-sm-12 col-xs-12">
                <label>PASSWORD : <span>I forgot!!</span></label>

                <div class="password">
                  <input type="password" id="password_login">
                  <div class="show_password">
                    <label class="label_password">Show</label>
                  </div><!--SHOW_PASSWORD-->
                </div><!--PASSWORD-->
              </div><!--LOGIN_FIELD-->

              <div class="button_input col-md-12 col-sm-12 col-xs-12">
                <button id="verify-login" class="btn login_btn" name="commit">LogIn</button>
              </div><!--BUTTON_INPUT-->

              <div class="login_field col-ms-12 col-sm-12 col-xs-12">

              </div><!--LOGIN_FIELD-->
            </form>

          </div><!--LOGIN_BLOCK-->
        </div><!--CONTENT-->

      </div><!--ROW-->
    </div><!--CONTAINER-->
  </div><!--SUMMARY-BLOCK-->

</div><!--CONTAINER-BLOCK-->
