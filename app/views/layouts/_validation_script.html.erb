<script>
	$('#validate_form button').click(function(e){
		$('#validate_form input').each(function(){
			var val = $(this).attr('id');
			var ary = <%=raw @validate %>;
			if(($.inArray(val, ary))>=0){
				if($(this).val() == ''){
					var self = $(this), activatedClass = 'validate-err btn-error';
					error_shake(self, activatedClass, 4000);
					e.preventDefault();
				}
			}
		});
		$('#validate_form div.cs-select').each(function(){
			var self = $(this);
			var val = $(this).attr('class').split(' ')[0];
			var ary = <%=raw @validate %>;
			if(($.inArray(val, ary))>=0) {
				var a = self.find('.cs-placeholder').html().contains('--');
				if (a) {
					var activatedClass = 'btn-error';
					error_shake(self, activatedClass, 4000);
					e.preventDefault();
				}
			}
		});
//		var self = $('#validate_form textarea');
//		if (self.val() == '') {
//			var activatedClass = 'validate-err btn-error';
//			error_shake(self, activatedClass, 4000);
//			e.preventDefault();
//		}
	});
</script>