            <li><a href="https://www.linkedin.com/company/nesans-mining-and-automation-private-limited/" target="_blank"><span class="fa fa-linkedin"></span></a></li>
            <li><a href="https://plus.google.com/+ssengineersindiain" target="_blank"><span class="fa fa-google-plus"></span></a></li>
            <li><a href="#"><span id="contact_pop" class="fa fa-envelope"></span></a></li>
          </ul>

          <!--<div class="search">-->
          <!--<span><a href="#nogo"><span class="fa fa-search"></span></a></span>-->
          <!--<input type="text" placeholder="..search">-->
          <!--</div>-->
