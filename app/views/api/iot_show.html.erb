<table>
  <tr>
    <th>Sensor 1</th>
    <th>Sensor 2</th>
    <th>Sensor 3</th>
    <th>Sensor 4</th>
    <th>Created At</th>
    <th>Updated At</th>
  </tr>
    <% @sensor.each do |x| %>
      <tr>
      <td><%= x.sensor_1 || "nil" %></td>
        <td><%= x.sensor_2 || "nil" %></td>
        <td><%= x.sensor_3 || "nil" %></td>
        <td><%= x.sensor_4 || "nil" %></td>
        <td><%= x.created_at %></td>
        <td><%= x.updated_at %></td>
      </tr>
    <% end %>
</table>

<style>
    table {
        font-size: 15px;
        text-align: center;
        width: 100%;
    }
    table th {
        padding: 10px 0;
        text-align: center;
        border: 1px solid;
    }
    td {
        border: 1px solid;
        padding: 5px 0;
    }
</style>